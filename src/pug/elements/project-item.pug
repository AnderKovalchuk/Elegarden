include ../elements/angle-link

mixin project-item(title, image= '')
    if image
        .projects__item
            a(href="/project.html")
                figure.projects__img
                    img(src= image alt= title)
                h3.projects__title= title
                +angle-link--text('Подробнее', '/project.html', '+')
    else
        .projects__item.projects__item--dark
            a(href="/project.html")
                h3.projects__title= title
                +angle-link--text('Подробнее', '/project.html')